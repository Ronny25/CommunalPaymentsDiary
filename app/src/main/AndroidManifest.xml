<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kotkin.lg.r25.communalpaymentsdiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.ServicesActivity"
            android:label="@string/choose_service" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.SettingsFragment"
            android:label="@string/action_settings" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.ElectricityActivity"
            android:label="@string/electricity" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.ElectricityTaxes"
            android:label="@string/electricityTaxes" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.ColdWActivity"
            android:label="@string/cold_water" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.HotWActivity"
            android:label="@string/hot_water" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.GazActivity"
            android:label="@string/gaz" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.HeatActivity"
            android:label="@string/heat" />
        <activity
            android:name="com.kotkin.lg.r25.communalpaymentsdiary.HistoryActivity"
            android:label="@string/history"
            android:screenOrientation="sensorLandscape" />
    </application>

</manifest>
